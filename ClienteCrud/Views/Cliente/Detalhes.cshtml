@model ClienteCrud.Dominio.Modelo.Cliente

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalhes do Cliente: @Model.Nome</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Sexo</dt>
        <dd class="col-sm-10">@Model.Sexo</dd>

        <dt class="col-sm-2">Endereço</dt>
        <dd class="col-sm-10">@Model.Endereco</dd>

        <dt class="col-sm-2">Telefones</dt>
        <dd class="col-sm-10">
            @if (Model.Telefones != null && Model.Telefones.Any())
            {
                <ul>
                    @foreach (var tel in Model.Telefones)
                    {
                        <li>@tel.Numero @(tel.Ativo ? "(ativo)" : "")</li>
                    }
                </ul>
            }
            else
            {
                <span>Nenhum</span>
            }
        </dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Voltar", "Index")
</p>